          <div onclick="change_color(this)"class="colorItem" data-color="1" style="background: #000"></div>
          <div onclick="change_color(this)" class="colorItem" data-color="3" style="background: #4C4C4C"></div>
          <div onclick="change_color(this)"class="colorItem" data-color="5" style="background: #740B07"></div>
          <div onclick="change_color(this)" class="colorItem" data-color="7" style="background: #C23800"></div>
          <div onclick="change_color(this)" class="colorItem" data-color="9" style="background: #E8A200"></div>
          <div onclick="change_color(this)" class="colorItem" data-color="11" style="background: #005510"></div>
          <div onclick="change_color(this)" class="colorItem" data-color="13" style="background: #00569E"></div>
          <div onclick="change_color(this)" class="colorItem" data-color="15" style="background: #0E0865"></div>
          <div onclick="change_color(this)" class="colorItem" data-color="17" style="background: #550069"></div>
          <div onclick="change_color(this)" class="colorItem" data-color="19" style="background: #A75574"></div>
          <div onclick="change_color(this)" class="colorItem" data-color="21" style="background: #63300D"></div>
        </div>
      </div>
      <input onchange="colorPicker()" type="color" id="colorPicker" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit color">
      <div class="containerTools">
        <div onclick="pencil()" class="tool toolActive" data-tool="pen"><img class="toolIcon" src="images/pen.gif" data-toggle="tooltip" data-placement="top" title="" data-original-title="(P)en"></div>
        <div onclick="eraser()" class="tool" data-tool="erase"><img class="toolIcon" src="images/rubber.gif" data-toggle="tooltip" data-placement="top" title="" data-original-title="(E)raser"></div>
        <div onclick="fill_canvas()" class="tool" data-tool="fill"><img class="toolIcon" src="images/filltool.gif" data-toggle="tooltip" data-placement="top" title="" data-original-title="(F)ill"></div>
      </div>
      <div class="containerBrushSizes" data-toggle="tooltip" data-placement="top" title="" data-original-title="Set brush size">
        <input onclick="myRange()" id="myRange" type="range" min="1" max="50" value="6">
      </div>
      <div class="containerClearCanvas">
        <div onclick="clear_canvas()" id="buttonClearCanvas" data-toggle="tooltip" data-placement="top" title="" data-original-title="Clear the board"></div>
      </div>
    </div>
  </main>

  <aside>
    <div id="wordsContainer" class="wordsBox">
     <div id="wordSelectAndHint" class="toHide">
      <div id="wordBox" class="allWords">
        <div id="wordBoxHeading"></div>
        <div id="timer" class="timerHintContainer wordsRandom"></div>
        <button id="word1" class="wordsRandom"></button>
        <button id="word2" class="wordsRandom"></button>
        <button id="word3" class="wordsRandom"></button>
      </div>
    </div>
      <div id="hint" class="timerHintContainer wordsRandom"></div>
    </div>
    <div class="boxMessage"></div>
    <div class="send">
      <form action="#" id="send-message">
        <input class="form-control" id="inputChat" type="text" name="inputChat" placeholder="Write your message here..." autocomplete="off">
      </form>
    </div>
